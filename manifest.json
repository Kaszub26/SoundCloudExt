{
    "manifest_version": 2,

    "name": "DiscoveryCloud",
    "description": "A music discovery stream powered by Soundcloud.",
    "version": "1.0",

    "permissions": [
        "storage",
        "https://api.sndcdn.com/",
        "http://api.sndcdn.com/",
        "http://connect.soundcloud.com/",
        "http://*/"
    ],
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "discover.html"
    },
    "background" : {
        "persistent" : true,
        "scripts" : ["discover.js"]
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}